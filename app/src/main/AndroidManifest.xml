        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DestinationUpdate"></activity>
        <activity android:name=".DestinationList" />
        <activity android:name=".DestinationView" />
        <activity android:name=".DanceUpdate" />
        <activity android:name=".DanceList" />
